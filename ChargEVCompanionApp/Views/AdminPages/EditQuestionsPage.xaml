<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChargEVCompanionApp.Views.AdminPages.EditQuestionsPage"
             Title="Edit"
             Shell.PresentationMode="Modal">


    <ContentPage.Content>
        <StackLayout Padding="20">
            <StackLayout Margin="15">
                <Label Style="{StaticResource LabelMedium}" Text="Question:"/>
                <Entry x:Name="QuestionEntry" Placeholder="Question"/>
                <Label Style="{StaticResource LabelMedium}" Text="Answer:" />
                <Entry x:Name="AnswerEntry" Placeholder="Answer"/>
            </StackLayout>

            <Button
                x:Name="UpdateButton"
                Padding="20,0"
                Clicked="UpdateButton_Clicked"
                HorizontalOptions="Center"
                Style="{StaticResource ButtonOutline}"
                Text="Update"
                VerticalOptions="Center" />

            <Button
                x:Name="DeleteButton"
                Padding="20,0"
                Clicked="DeleteButton_Clicked"
                HorizontalOptions="Center"
                Style="{StaticResource ButtonOutline}"
                Text="Delete"
                VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>